<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Subtitles</display-name>
  <servlet>
    <servlet-name>Subtitles</servlet-name>
    <servlet-class>com.flkoliv.subtitles.servlets.Subtitles</servlet-class>
    <multipart-config>
            <location>C:\Users\olivi\eclipse-workspace\Subtitles\upload\tmp\</location> <!-- A adapter chez vous -->
            <max-file-size>10485760</max-file-size> <!-- 10 Mo -->
            <max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
            <file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>Subtitles</servlet-name>
    <url-pattern>/sub</url-pattern>
  </servlet-mapping> 
</web-app>